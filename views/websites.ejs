<!DOCTYPE html>
<html lang="en">
  <head>

    <!DOCTYPE html>
<html lang="en">
  <head>

    <title>Home Page</title>

    <!-- outside css links -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;1,500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <!-- app css links -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <!-- Add Bootstrap meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>

  </head>

  <body>
    <header>
      <div id="logo" class="container-fluid"><img src="./assets/1x/logo.png" alt="keyboard visual with padlock graphics"></div>

      <nav id="mainnav" class="container-fluid">
        <!-- loged in name displayed -->
        <% if(!username) {%>
        <div class="col login-info pull-right">Login or register first!!!</div>
          <% } else { %>
        <div class="row">
          <div class="col login-info pull-right">LOGGED IN AS: <%= username %></div>
        </div>
        <div class="row">
          <div class="col login-info pull-right">ORGANIZATION: <%= organization %></div>
        </div>
        <%  }  %>
        <!-- new site and logout buttons -->
        <div class="row">
          <% if(username) {%>
          <div class="col d-flex justify-content-center text-center">
            <button type="button" class="nav_button password-form">Add New Site</button>
          </div>
          <div class="col d-flex justify-content-center text-center">
            <button id="logout-btn" type="submit" class="nav_button">Logout </button>
          </div>
          <% } else { %>
            <button id="login-btn-dynamic" type="submit" class="nav_button">Login </button>
          </div>
            <% } %>
      </nav>

    </header>

    <main>
      <!-- image under header -->
      <div>
        <img src="./assets/smaller_hero.png" width="100%" alt="">
      </div>


    <!-- Add new web-site form -->
    <div class="container" id="new-site-forms">
      <div class="row">
        <div class="col-6">
          <form id="new-website">
            <h4>New Website Form</h4>
            <p class= >Fill-in the fields and submit to save your credentials for a new site. You can use the pasword generator on the right, and the copy to clipboard button</p>

            <!-- user input area -->
            <div class="form-group">
              <label>New site URL</label>
              <input type="text" class="form-control" name="url">
            </div>

            <div class="form-group">
              <label>User Login Details</label>
              <input type="text" class="form-control" name="loginname">
            </div>

            <div class="form-group">
              <label>Password</label>
              <input id="new-site-password-input" type="text" class="form-control" name="password">
            </div>

            <div class="form-group">
              <label>Website Category</label>
              <input type="text" class="form-control" name="category" list="category" />
              <datalist id="category">
                <option>Shopping</option>
                <option>Education</option>
                <option>Social Media</option>
                <option>Information</option>
                <option>Entertainment</option>
              </datalist>
            </div>
            <!-- submit form -->
            <button id="new-website-button" type="submit" class="btn btn-danger"> Submit </button>
          </form>
        </div>

        <!-- generate new password form -->
        <div class="col-6">
          <form id='generate-password'>
            <h4>Create your new password here:</h4>

            <!-- user input area -->
            <div class="form-group">
              <label>How long will your password be?</label>
              <input type="number" class='length' name='length' placeholder ="length of password">
            </div>

            <div class="form-check">
              <input  type='checkbox' class='number' name='number'>
              <label class="form-check-label" for=number> Need number? </label>
            </div>

            <div class="form-check">
              <input type='checkbox' class='lowercase' name='lowercase'>
              <label class="form-check-label" for=lowercase> Need lowercase? </label>
            </div>

            <div class="form-check ">
              <input type='checkbox' class='uppercase' name='uppercase'>
              <label class="form-check-label" for=uppercase> Need uppercase? </label>
            </div>

            <div class="form-check">
              <input type='checkbox' class='special-characters' name='special-characters'>
              <label class="form-check-label" for=special-characters> Need Special Characters? </label>
            </div>

            <!-- submit form -->
            <div class="form-row password-button">
              <button type="submit" class="btn btn-danger"> New Password! </button>
            </div>
            <br>

            <!-- password output area -->
            <h5 class="your-password">Your new password is: </h5>
            <output id="new-password-output" name="new-password" class="password" type="text"></output>
            <button type="button" id="password-copy-button" data-clipboard-target="#new-password-output" >
              <img src="./assets/copyClipboard@33.33x.png" class="copiedToClipboard">
            </button>
          </form>
        </div>
      </div>
    </div>
</div>
</div>

<!-- Edit web-site form -->
<div class="edit-container">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6" id = "edit-form">
      <div class="col-3"></div>
    </div>
</div>
</div>

      <!-- display websites and login credentials on db -->
      <div>
        <h4>My Credentials</h4>
        <div class="container">
        <form id="category-filter">
          <div class="row align-items-center">
            <div class="col-5">
          <label for="filtering">Choose category:</label>
          <select name="category" id="category">
            <option value="All">All</option>
            <option value="Shopping">Shopping</option>
            <option value="Education">Education</option>
            <option value="Social Media">Social Media</option>
            <option value="Information">Information</option>
            <option value="Entertainment">Entertainment</option>
            <option value="Custom">Custom</option>
          </select></div>
          <div class="col">
          <input class="btn btn-danger" type="submit" value="Submit">
        </div>
        </div>
        </form>
      </div>
      </div>

      <div  class="container websites-display">

        </div>
    </main>


  <!-- External JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.6/clipboard.min.js"></script>
  <!-- App JS -->
    <script type="text/javascript" src="/scripts/helper.js"></script>
    <script type="text/javascript" src="/scripts/client.js"></script>
    <script type="text/javascript" src="/scripts/animate.js"></script>
    <!-- copy to clipboard script -->
    <script>
      const btn = document.getElementById('password-copy-button');
      const clipboard = new ClipboardJS(btn);
      clipboard.on('success', function(e) {
          console.log(e);
      });

      clipboard.on('error', function(e) {
          console.log(e);
      });
    </script>

  </body>
  <footer>
    <div class="container">created by Jaeyoung, Keith, Audrey, for Lighthouse Labs, September 2020</div>
  </footer>
</html>
